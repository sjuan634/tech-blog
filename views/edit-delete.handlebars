<div class="flex justify-center mt-8">
  <form id="edit-post-form" class="w-full max-w-lg">
    <div class="mb-4">
      <label for="post-title" class="block text-gray-700 font-bold mb-2">Title</label>
      <input type="text" id="post-title" data-post-id="{{post.id}}" value="{{post.title}}" required
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>
    <div class="mb-6">
      <label for="post" class="block text-gray-700 font-bold mb-2">Post</label>
      <textarea name="post" id="post" placeholder="Post here..." required
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">{{post.body}}</textarea>
    </div>
    <div class="flex justify-center gap-x-4">
      <button type="submit" id="edit-post-btn" class="mb-6 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Update</button>
      <button type="submit" id="delete-btn" class="mb-6 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Delete</button>
    </div>
  </form>
</div>

<script src="../js/edit-delete.js"></script>